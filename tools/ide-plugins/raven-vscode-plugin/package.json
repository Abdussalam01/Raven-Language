{
	"name": "raven-vscode",
	"description": "Raven plugin for VSCode",
	"author": "Ethan Menell",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/BigBadE/raven-language"
	},
	"publisher": "Ethan Menell",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"raven"
	],
	"engines": {
		"vscode": "^1.74.0"
	},
	"capabilities": {
        "untrustedWorkspaces": {
            "supported": false,
            "description": "Raven plugin invokes binaries installed by it. "
        }
    },
	"dependencies": {
        "vscode-languageclient": "^8.1.0"
    },
	"activationEvents": [
        "workspaceContains:*/build.rv",
        "workspaceContains:*/*.rv"
	],
	"main": "./out/extension",
	"contributes": {
		"languages": [
			{
				"id": "raven",
				"extensions": [
					".rv"
				],
				"aliases": [
					"Raven",
					"rv"
				],
				"configuration": "./raven-configuration.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm install && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd .."
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"@types/node": "^16.11.7",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"eslint": "^7.21.0",
		"typescript": "^5.0.2"
	}
}
